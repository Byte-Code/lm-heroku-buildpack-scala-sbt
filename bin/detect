#!/usr/bin/env sh
# Usage
# bin/detect BUILD_DIR
# BUILD_DIR=$1

# Detect SBT project
if [ -f $1/build.sbt ]; then
    echo "build.sbt found. This is an SBT project"
    # Comment fancy output for now
    # echo "Using sbt-$(cat $1/project/build.properties | grep sbt.version | cut -d= -f2)"
    exit 0
else
    echo "build.sbt not found. Not an SBT project"
    exit 1
fi
